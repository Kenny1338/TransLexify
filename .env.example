# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
# Default port for development server
VITE_PORT=8080

# API Configuration
# Base URL for API requests (development)
VITE_API_BASE_URL=http://localhost:8080

# Environment
# development, production, or test
NODE_ENV=development

# Optional: Rate Limiting
# Maximum number of translations per minute
VITE_RATE_LIMIT=60

# Optional: Translation Settings
# Default source language
VITE_DEFAULT_SOURCE_LANG=en
# Default target language
VITE_DEFAULT_TARGET_LANG=de
# Maximum text length for translation
VITE_MAX_TEXT_LENGTH=5000 